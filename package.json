{
  "name": "serverlessconsole",
  "publisher": "devadvice",
  "displayName": "Serverless Console",
  "description": "Serverless Console enables you to show function overview and logs from within the Visual Studio Code editor.",
  "author": "domagojk (http://github.com/domagojk)",
  "version": "0.4.8",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/domagojk/serverless-console.git"
  },
  "bugs": "https://github.com/domagojk/serverless-console/issues",
  "icon": "resources/icon.png",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Serverless",
    "CloudWatch",
    "Lambda",
    "AWS"
  ],
  "activationEvents": [
    "onView:fnHandlerList"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Serverless Console",
      "properties": {
        "serverlessConsole.groupPerRequest": {
          "type": "boolean",
          "title": "Group Per Request",
          "description": "Determines a default option on whether logs should be grouped per request",
          "default": true
        },
        "serverlessConsole.autoRefreshInterval": {
          "type": "number",
          "title": "Auto Refresh Interval",
          "default": 0
        },
        "serverlessConsole.services": {
          "type": "array",
          "default": null,
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "type of service (serverlessFramework or custom)",
                "default": "serverlessFramework"
              },
              "awsProfile": {
                "type": "string",
                "description": "The name of the credential profile to obtain credentials from.",
                "default": "default"
              },
              "cwd": {
                "type": "string",
                "description": "Working directory in which serverless print command will be executed",
                "default": "./"
              },
              "command": {
                "type": "string",
                "description": "serverless print command",
                "default": "sls print"
              },
              "stages": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "timeOffsetInMs": {
                "type": "number",
                "description": "Timestamp offset (useful if you are in different timezone)",
                "default": 0
              },
              "region": {
                "type": "string",
                "default": "us-east-1"
              },
              "title": {
                "type": "string"
              },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "tabs": {
                      "type": "array",
                      "description": "There should always be at least one tab",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "description": "Tab title"
                          },
                          "logs": {
                            "type": "string",
                            "description": "CloudWatch LogGroup name"
                          },
                          "lambda": {
                            "type": "string",
                            "description": "If provided, the Lambda overview will be shown"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "description": "'serverless print' command(s) for retriving data about the service"
        }
      }
    },
    "commands": [
      {
        "command": "serverlessConsole.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "serverlessConsole.openFunction",
        "title": "Open function",
        "icon": {
          "light": "resources/light/open-file.svg",
          "dark": "resources/dark/open-file.svg"
        }
      },
      {
        "command": "serverlessConsole.addService",
        "title": "Add Service",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "serverlessConsole.removeService",
        "title": "Remove"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "serverlessConsole",
          "title": "Serverless Console",
          "icon": "resources/dark/event.svg"
        }
      ]
    },
    "views": {
      "serverlessConsole": [
        {
          "id": "fnHandlerList",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "serverlessConsole.refreshEntry",
          "when": "view == fnHandlerList",
          "group": "navigation"
        },
        {
          "command": "serverlessConsole.addService",
          "when": "view == fnHandlerList",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "serverlessConsole.removeService",
          "when": "view == fnHandlerList && viewItem == service"
        },
        {
          "command": "serverlessConsole.openFunction",
          "when": "view == fnHandlerList && viewItem == function-localRef",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "@types/yaml": "^1.0.2",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "ts-loader": "^6.2.1",
    "tslint": "^5.12.1",
    "typescript": "^3.7.2",
    "vscode-test": "^1.2.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "aws-sdk": "^2.541.0",
    "moment": "2.24.0",
    "yaml": "1.7.0"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true
  }
}
