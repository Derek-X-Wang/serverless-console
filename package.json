{
  "name": "serverlessconsole",
  "displayName": "Serverless Console",
  "description": "Serverless Console enables you to show function overview and logs from within the Visual Studio Code editor.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Serverless",
    "CloudWatch",
    "Lambda",
    "AWS"
  ],
  "activationEvents": [
    "onView:fnHandlerList"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Serverless Console",
      "properties": {
        "serverlessConsole.services": {
          "type": "array",
          "default": [
            {
              "type": "serverlessFramework",
              "awsProfile": "default",
              "cwd": "./",
              "command": "sls print",
              "timeOffsetInMs": 0,
              "stages": [
                "dev"
              ]
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "type of service (serverlessFramework or custom)",
                "default": "serverlessFramework"
              },
              "awsProfile": {
                "type": "string",
                "description": "The name of the credential profile to obtain credentials from.",
                "default": "default"
              },
              "cwd": {
                "type": "string",
                "description": "Working directory in which serverless print command will be executed",
                "default": "./"
              },
              "command": {
                "type": "string",
                "description": "serverless print command",
                "default": "sls print"
              },
              "stages": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "timeOffsetInMs": {
                "type": "number",
                "description": "Timestamp offset (useful if you are in different timezone)",
                "default": 0
              },
              "region": {
                "type": "string",
                "default": "us-east-1"
              },
              "title": {
                "type": "string"
              },
              "items": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "tabs": {
                      "type": "array",
                      "description": "There should always be at least one tab",
                      "items": {
                        "type": "object",
                        "properties": {
                          "title": {
                            "type": "string",
                            "description": "Tab title"
                          },
                          "logs": {
                            "type": "string",
                            "description": "CloudWatch LogGroup name"
                          },
                          "lambda": {
                            "type": "string",
                            "description": "If provided, the Lambda overview will be shown"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "description": "'serverless print' command(s) for retriving data about the service"
        }
      }
    },
    "commands": [
      {
        "command": "serverlessConsole.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "serverlessConsole.openFunction",
        "title": "Open function",
        "icon": {
          "light": "resources/light/open-file.svg",
          "dark": "resources/dark/open-file.svg"
        }
      },
      {
        "command": "serverlessConsole.showHelpPage",
        "title": "Add Service",
        "icon": {
          "light": "resources/light/view.svg",
          "dark": "resources/dark/view.svg"
        }
      },
      {
        "command": "serverlessConsole.openWorkspaceSettingsJson",
        "title": "Open Workspace Settings JSON"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "serverlessConsole",
          "title": "Serverless Console",
          "icon": "resources/dark/event.svg"
        }
      ]
    },
    "views": {
      "serverlessConsole": [
        {
          "id": "fnHandlerList",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "serverlessConsole.refreshEntry",
          "when": "view == fnHandlerList",
          "group": "navigation"
        },
        {
          "command": "serverlessConsole.showHelpPage",
          "when": "view == fnHandlerList",
          "group": "2_moreActions"
        }
      ],
      "view/item/context": [
        {
          "command": "serverlessConsole.openFunction",
          "when": "view == fnHandlerList && viewItem == function-localRef",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "@types/yaml": "^1.0.2",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "aws-sdk": "^2.541.0",
    "moment": "2.24.0",
    "yaml": "1.7.0"
  }
}
