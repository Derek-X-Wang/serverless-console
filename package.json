{
  "name": "serverlessmonitor",
  "displayName": "serverless monitor",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.38.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:fnHandlerList"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Serverless monitor",
      "properties": {
        "serverlessConsole.services": {
          "type": "array",
          "default": [
            {
              "type": "serverlessFramework",
              "awsProfile": "default",
              "cwd": "./",
              "command": "sls print",
              "stages": [
                "dev"
              ]
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "type of service (serverless or custom)",
                "default": "serverlessFramework"
              },
              "awsProfile": {
                "type": "string",
                "description": "The name of the credential profile to obtain credentials from.",
                "default": "default"
              },
              "cwd": {
                "type": "string",
                "description": "path to service",
                "default": "./"
              },
              "command": {
                "type": "string",
                "description": "serverless print command",
                "default": "sls print"
              },
              "stages": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "timeOffsetInMs": {
                "type": "number",
                "description": "Timestamp offset (useful if you are in different timezone)",
                "default": 0
              },
              "items": {
                "type": "array"
              }
            }
          },
          "description": "'serverless print' command(s) for retriving data about the service"
        }
      }
    },
    "commands": [
      {
        "command": "fnHandlerList.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "serverlessConsole.openFunction",
        "title": "Open function",
        "icon": {
          "light": "resources/light/open-file.svg",
          "dark": "resources/dark/open-file.svg"
        }
      },
      {
        "command": "fnHandlerList.openLogs",
        "title": "Open logs",
        "icon": {
          "light": "resources/light/view.svg",
          "dark": "resources/dark/view.svg"
        }
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "serverlessmonitor",
          "title": "Serverless Console",
          "icon": "resources/dark/event.svg"
        }
      ]
    },
    "views": {
      "serverlessmonitor": [
        {
          "id": "fnHandlerList",
          "name": ""
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "fnHandlerList.refreshEntry",
          "when": "view == fnHandlerList",
          "group": "navigation"
        },
        {
          "command": "fnHandlerList.openLogs",
          "when": "view == fnHandlerList",
          "group": "2_moreActions"
        }
      ],
      "view/item/context": [
        {
          "command": "serverlessConsole.openFunction",
          "when": "view == fnHandlerList && viewItem == function-localRef",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^5.2.6",
    "@types/moment": "^2.13.0",
    "@types/node": "^10.12.21",
    "@types/vscode": "^1.38.0",
    "@types/yaml": "^1.0.2",
    "glob": "^7.1.4",
    "mocha": "^6.1.4",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1",
    "vscode-test": "^1.2.0"
  },
  "dependencies": {
    "aws-sdk": "^2.541.0",
    "moment": "^2.24.0",
    "yaml": "^1.7.0"
  }
}
